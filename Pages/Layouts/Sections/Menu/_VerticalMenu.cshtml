@{
  TempData.Keep();
  string? currentPage = Convert.ToString(ViewContext.RouteData.Values["Page"])!;
}

<!-- Menu -->
@* ! Do this simple *@
<aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">

  @* ! Hide app brand if navbar-full *@
  <div class='app-brand demo @((@ViewData["navbarFull"] != null && Convert.ToBoolean(@ViewData["navbarFull"])) ? "d-xl-none" : "")'>
    <a asp-page="/Index" class="app-brand-link">
      <span class="app-brand-logo demo">
        @await Html.PartialAsync("../_Partials/_Macros")
      </span>
      <span class="app-brand-text demo menu-text fw-bold ms-2">@TempData.Peek("appName")</span>
    </a>

    <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto">
      <i class="bx menu-toggle-icon d-none d-xl-block fs-4 align-middle"></i>
      <i class="bx bx-x d-block d-xl-none bx-sm align-middle"></i>
    </a>
  </div>

  @* ! Hide menu divider if navbar-full *@
  <div class='menu-divider mt-0 @((@ViewData["navbarFull"] != null && Convert.ToBoolean(@ViewData["navbarFull"])) ? "d-xl-none" : "")'>
  </div>

  <div class="menu-inner-shadow"></div>
  <div class="menu-block my-2 d-flex align-items-center">
    <div class="avatar avatar-lg me-2">
      <img alt="Avatar" class="rounded-circle shadow" src="/img/avatars/house.png">
    </div>
    <a class="menu-text mt-3 mb-1 h5 dropdown-toggle hide-arrow user-home-name" data-bs-toggle="dropdown" aria-expanded="false"></a>
    <ul class="dropdown-menu">
      <!-- <li> <a class="dropdown-item" href="javascript:void(0);">Nhà Của Dũng</a> </li>
      <li> <a class="dropdown-item" href="javascript:void(0);">Nhà Mẹ Vợ Dũng</a> </li> -->
    </ul>
    <div class="small">
      <a class="menu-link user-address" href="javascript:void(0)" value=""></a>
    </div>
  </div>
  <div class="menu-divider mt-0"></div>
  <div class="menu-divider mt-0"></div>
  <div class="menu-divider mt-0"></div>

  @* ! Starter Kit menu-items *@
  <ul class="menu-inner py-1">
    <li class='menu-item@(currentPage == "/Home/Index" ? " active" : "")'>
      <a asp-page="/Home/Index" class="menu-link">
        <i class="menu-icon tf-icons bx bx-home-circle"></i>
        <div>Tổng quan</div>
      </a>
    </li>
    <li class='menu-item@(currentPage == "/Home/Devices" ? " active" : "")'>
      <a asp-page="/Home/Devices" class="menu-link">
        <i class='menu-icon tf-icons bx bxs-devices'></i>
        <div>Thiết bị</div>
      </a>
    </li>
    <li class='menu-item@(currentPage == "/Home/Analytics" ? " active" : "")'>
      <a asp-page="/Home/Analytics" class="menu-link">
        <i class="menu-icon tf-icons bx bxs-analyse"></i>
        <div>Thống kê</div>
      </a>
    </li>
    <li class='menu-item@(currentPage == "/Home/Calendar" ? " active" : "")'>
      <a asp-page="/Home/Calendar" class="menu-link">
        <i class="menu-icon tf-icons bx bx-calendar"></i>
        <div>Lịch trình</div>
      </a>
    </li>
    <li class='menu-item@(currentPage == "/Home/Rules" ? " active" : "")'>
      <a asp-page="/Home/Rules" class="menu-link">
        <i class="menu-icon tf-icons bx bx-add-to-queue"></i>
        <div>Kịch bản</div>
      </a>
    </li>
    <li class='menu-item@(currentPage == "/Home/History" ? " active" : "")'>
      <a asp-page="/Home/History" class="menu-link">
        <i class="menu-icon tf-icons bx bx-history"></i>
        <div>Lịch sử</div>
      </a>
    </li>
    <li class='menu-item@(currentPage == "/Home/Settings" ? " active" : "")'>
      <a asp-page="/Home/Settings" class="menu-link">
        <i class="menu-icon tf-icons bx bx-cog"></i>
        <div>Cài đặt</div>
      </a>
    </li>
  </ul>

</aside>
<!-- / Menu -->
